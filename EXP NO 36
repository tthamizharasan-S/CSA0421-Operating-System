#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>
#define N 5  
#define THINKING 0
#define HUNGRY 1
#define EATING 2
sem_t mutex;
sem_t S[N];
int state[N];
#define LEFT (phnum + 4) % N
#define RIGHT (phnum + 1) % N
void test(int phnum) {
    if (state[phnum] == HUNGRY &&
        state[LEFT] != EATING &&
        state[RIGHT] != EATING) 
    {
        state[phnum] = EATING;
        sleep(1);
        printf("Philosopher %d takes forks %d and %d\n", phnum + 1, LEFT + 1, phnum + 1);
        printf("Philosopher %d is EATING\n\n", phnum + 1);
        sem_post(&S[phnum]);
    }
}
void take_fork(int phnum) {
    sem_wait(&mutex);
    state[phnum] = HUNGRY;
    printf("Philosopher %d is HUNGRY\n", phnum + 1);
    test(phnum);
    sem_post(&mutex);
    sem_wait(&S[phnum]); 
    sleep(1);
}
void put_fork(int phnum) {
    sem_wait(&mutex);
    state[phnum] = THINKING;
    printf("Philosopher %d puts down forks %d and %d\n", phnum + 1, LEFT + 1, phnum + 1);
    printf("Philosopher %d is THINKING\n\n", phnum + 1);
    test(LEFT);
    test(RIGHT);
    sem_post(&mutex);
}
void *philosopher(void *num) {
    int phnum = *(int *)num;
    while (1) {
        sleep(1);
        take_fork(phnum);
        sleep(2);       
        put_fork(phnum);
    }
}
int main() {
    pthread_t threads[N];
    int phil_num[N];
    sem_init(&mutex, 0, 1);
    for (int i = 0; i < N; i++)
        sem_init(&S[i], 0, 0);
    for (int i = 0; i < N; i++) {
        phil_num[i] = i;
        pthread_create(&threads[i], NULL, philosopher, &phil_num[i]);
        printf("Philosopher %d is THINKING\n", i + 1);
    }
    for (int i = 0; i < N; i++)
        pthread_join(threads[i], NULL);
    return 0;
}
